@model List<Movie>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                List of Movies
            </h2>
        </div>
        <div class="vol-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle">Add Movie</i>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                     Released
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @movie.Name
                    </td>
                    <td>
                        @movie.Description
                    </td>
                    <td>
                        @movie.Released
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
